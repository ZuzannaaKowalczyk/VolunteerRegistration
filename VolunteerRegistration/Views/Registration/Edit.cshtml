@model VolunteerRegistration.Models.Registration

@{
    ViewData["Title"] = "Edytuj rejestrację";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="RegistrationDate"></label>
        <input asp-for="RegistrationDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="VolunteerId"></label>
        <input asp-for="VolunteerId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EventId"></label>
        <input asp-for="EventId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
